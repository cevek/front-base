{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",
		"outDir": "dist",
		"jsx": "react",
		"strict": true,
		"preserveSymlinks": true,
		"esModuleInterop": true,
		"plugins": [
			{ "transform": "atom4/transformer" }, 
			{ "transform": "reactobem" },
			{ "transform": "reveal-in-vscode/transformer" },
			{ "transform": "optional-chaining-plugin/transformer" },
			{ "name": "exclude-legacy-plugin" },
			{ "name": "typed-graphql-query/plugin" }
		]
	}
}
